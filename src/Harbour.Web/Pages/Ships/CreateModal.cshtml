@page
@using Harbour.Localization
@using Harbour.Web.Pages.Ships
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<HarbourResource> L
@{
    Layout = null;
}
<form asp-page="/Ships/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewShip"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Ship.Name" />
            <abp-input asp-for="Ship.Type" />
            <abp-input asp-for="Ship.YearBuilt " />
            <abp-input asp-for="Ship.PassengerCapacity " />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
